// Example Zuildfile

/*
  Variable Namespaces

  Environment
  env.VAR_NAME

  Arguments
  arg.ARG_NAME

  Document variables
  var.VAR_NAME
 */

Help {
  title = "Example Zuildfile"
  content = <<-EOF
    This is the Zuildfile help section.
    It is epic!
  EOF
}

Arg "aarg" {
  short = "a"
  usage = "a test arg"
}

Arg "barg" {
  short = "b"
  usage = "b test arg"
}

welcome_message = "Welcome to Zuild ${env.USER}!"
turkey_message = "Yo turkey. ${var.welcome_message}"
name = "bacon"

tpl_vals = ["nacho", "bacon", "salad"]

some_doc = <<-EOF
  Hey this is neat ${var.name}
  La la la
EOF

some_template = <<-EOF
  %{ for x in var.tpl_vals }
    - ${x ~}
  %{ endfor }
EOF

Task "clean" {
  Sh "clean it" {
    shell = "zsh"

    env = {
      SNARF = "narf"
      GARTH = "darth"
    }

    cmd = ["echo ${var.welcome_message}"]

    on_condition = arg.aarg == "asdf"
    allow_failure = true
  }
}

Task "task_tpl" {
  require = ["clean"]

  Sh "echo tpl" {
    cmd = ["cat <<EOF ${var.some_template}"]
  }
}

Task "task_one" {
  require = ["clean", "task_tpl"]

  Sh "task name" {
    cmd = ["echo Zuild executed ${arg.aarg} and ${arg.barg} env var ${env.USER}"]
  }

  Sh "echo somedoc" {
    cmd = ["cat <<EOF \n${var.some_doc}"]
  }
}

Task "task_nacho" {
  Sh "nacho" {
    cmd = ["echo Zuild wants a nacho"]
  }
}

Task "default" {
  require = ["task_one"]
}